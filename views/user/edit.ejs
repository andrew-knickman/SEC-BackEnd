<% if(flash && flash.err) {%>
<ul class="alert alert-success">
    <% Object.keys(flash.err).forEach(function(error) { %>
    <li><%-JSON.stringify(flash.err[error]) %></li>
    <% })%>
</ul>
<% } %>
<form action="/user/update/<%= user.id %>" method="POST" class="form-update">
    <div class="control-group">
        <input value="<%= user.username %>" name="username" type="text" class="form-control"/>
    </div>
    <div class="control-group">
        <input value="<%= user.name %>" name="name" type="text" class="form-control"/>
    </div>
    <div class="control-group">
        <input value="<%= user.email %>" name="email" type="text" class="form-control"/>
    </div>
    <input type="submit" value="Update" class="btn btn-md btn-primary btn-block"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>